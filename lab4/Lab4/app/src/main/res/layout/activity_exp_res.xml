<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.nickrom.lab4.ExpResActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enterText"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/launch_activity_for_result"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDisplayResult"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtDisplayResult"
        android:textSize="20sp"
        android:layout_width="349dp"
        android:layout_height="289dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_result_yet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-125dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</android.support.constraint.ConstraintLayout>
